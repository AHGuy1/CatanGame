<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CatanGame.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:CatanGame.Models"
    xmlns:vm="clr-namespace:CatanGame.ViewModels"
    Title="HomePage"
    x:DataType="vm:HomePageVM">
    <VerticalStackLayout>
        <Grid
            Padding="5"
            ColumnDefinitions="*,2*"
            ColumnSpacing="5">
            <Picker
                Title="Selct Size"
                FontSize="Title"
                HorizontalTextAlignment="Center"
                ItemDisplayBinding="{Binding DisplayName}"
                ItemsSource="{Binding GameSizes}"
                SelectedItem="{Binding SelectedGameSize}" />
            <Button
                Grid.Column="1"
                Margin="10"
                Command="{Binding AddGameComand}"
                HorizontalOptions="Fill"
                Text="Add Game" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>