<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CatanGame.Views.LogInPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:CatanGame.Models"
    xmlns:vm="clr-namespace:CatanGame.ViewModels"
    x:DataType="vm:LogInPageVM"
    IsBusy="{Binding IsBusy}">

    <VerticalStackLayout
        Padding="30"
        Spacing="25"
        VerticalOptions="Center">

        <Label
            FontAttributes="Bold"
            FontSize="32"
            HorizontalOptions="Center"
            Text="{x:Static m:Strings.LoginTitle}" />

        <Label
            FontAttributes="Bold"
            FontFamily="MaterialSymbols"
            FontSize="32"
            HorizontalOptions="Center"
            Text="{StaticResource IconVerified_user}" />

        <Border
            Padding="10"
            Stroke="DodgerBlue"
            StrokeShape="RoundRectangle 16"
            StrokeThickness="1">
 
            <Grid
                RowDefinitions="auto,auto,auto">
                <Label 
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="{x:Static m:Strings.UserNameLabel}" />

                <Entry
                    Grid.Row="1"
                    FontSize="18"
                    Text="{Binding UserName}"
                    TextColor="black" />
                <Label
                    FontAttributes="Bold"
                    FontSize="12"
                    TextColor="Red"
                    Grid.Row="2"
                    IsVisible="{Binding IsVisibleUserNameMessege}"
                    HorizontalOptions="Center"
                    Text="{x:Static m:Strings.UsernameRequiredMessage}" />
            </Grid>

        </Border>

        <Border
            Padding="10"
            Stroke="DodgerBlue"
            StrokeShape="RoundRectangle 16"
             StrokeThickness="1">

            <Grid 
                RowDefinitions="auto,auto,auto">
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="{x:Static m:Strings.PasswordLabel}" />
                <Grid 
                    Grid.Row="1" 
                    ColumnDefinitions="*,auto">
                    <Entry 
                        Text="{Binding Password}"
                        IsPassword="{Binding IsPassword}"
                        FontSize="18"
                        TextColor="black" />
                    <Button
                        BackgroundColor="Transparent"
                        BorderWidth="0"
                        Command="{Binding ToggleIsPasswordCommand}"
                        FontFamily="MaterialSymbols"
                        FontSize="24"
                        Style="{StaticResource IconButtonStyle}"
                        HorizontalOptions="End"
                        Text="{Binding IsPassword, Converter={StaticResource passwordIconConvert}}"
                        TextColor="DodgerBlue" />
                </Grid>
                <Label
                    FontAttributes="Bold"
                    FontSize="12"
                    TextColor="Red"
                    Grid.Row="2"
                    IsVisible="{Binding IsVisiblePasswordMessege}"
                    HorizontalOptions="Center"
                    Text="{x:Static m:Strings.PasswordRequiredMessage}" />
            </Grid>
            </Border>

                <Button
                    Command="{Binding LoginCommand}"
                    CornerRadius="8"
                    FontSize="18"
                    HeightRequest="50"
                    Text="{x:Static m:Strings.LoginButton}"
                    TextColor="White">

                <Button.ImageSource>
                    <FontImageSource Glyph="{StaticResource IconLogin}">
                        <FontImageSource.FontFamily>MaterialSymbols</FontImageSource.FontFamily>
                    </FontImageSource>
                </Button.ImageSource>

                </Button>

        <Label
            FontAttributes="Bold"
            FontSize="28"
            HorizontalOptions="Center"
            Text="{x:Static m:Strings.DontHaveAnAcoountLabel}" />

        <Button
            Command="{Binding ToggleIsPasswordCommand}"
            CornerRadius="8"
            FontSize="18"
            HeightRequest="50"
            Text="{x:Static m:Strings.CreateAnAcoountLabel}"
            TextColor="White" />

    </VerticalStackLayout>

</ContentPage>