<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CatanGame.Views.PassWordResetPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:CatanGame.Models"
    xmlns:vm="clr-namespace:CatanGame.ViewModels"
    Title="PasswordReset"
    x:DataType="vm:PassWordResetPageVM">
    <VerticalStackLayout
        Padding="30"
        Spacing="25"
        VerticalOptions="Center">

        <Border
            Padding="10"
            Stroke="DodgerBlue"
            StrokeShape="RoundRectangle 16"
            StrokeThickness="1">

            <Grid RowDefinitions="auto,auto,auto">
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="{x:Static m:Strings.EmailLabel}"
                    TextColor="DarkOrange" />

                <Entry
                    Grid.Row="1"
                    FontSize="18"
                    Text="{Binding Email}"
                    TextColor="black" />
                <Label
                    Grid.Row="2"
                    FontAttributes="Bold"
                    FontSize="12"
                    HorizontalOptions="Center"
                    IsVisible="{Binding IsVisibleEmailMessege}"
                    Text="{x:Static m:Strings.invalidEmail}"
                    TextColor="#E32636" />
            </Grid>

        </Border>

        <Button
            Command="{Binding ResetPassWordCommand}"
            FontAttributes="Bold"
            FontSize="22"
            HeightRequest="70"
            Text="{x:Static m:Strings.PasswordResetTitle}"
            TextColor="White" />

    </VerticalStackLayout>

</ContentPage>