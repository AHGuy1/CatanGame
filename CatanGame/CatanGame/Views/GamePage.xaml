<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CatanGame.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:CatanGame.Models"
    xmlns:vm="clr-namespace:CatanGame.ViewModels"
    Title="GamePage"
    x:DataType="vm:GamePageVM"
    IsBusy="{Binding IsBusy}">

    <HorizontalStackLayout>
        <Grid VerticalOptions="Center" HorizontalOptions="Center">
            <Image
                Source="Boardframe.png"
                WidthRequest="430"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
            <Grid VerticalOptions="Center" HorizontalOptions="Center" x:Name="grdBoard">
            </Grid>
        </Grid>
        <Button Command="{Binding EndTurnCommand}" Text="{x:Static m:Strings.EndTurn}" />
    </HorizontalStackLayout>
</ContentPage>