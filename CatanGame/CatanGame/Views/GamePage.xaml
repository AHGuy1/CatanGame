<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CatanGame.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:CatanGame.Models"
    xmlns:vm="clr-namespace:CatanGame.ViewModels"
    Title="GamePage"
    x:DataType="vm:GamePageVM"
    IsBusy="{Binding IsBusy}">

    <VerticalStackLayout>
        <Label HorizontalOptions="Center" Text="{Binding GameCode}" />
        <Label HorizontalOptions="Center" Text="{Binding Playr1Name}" />
        <Label HorizontalOptions="Center" Text="{Binding Playr2Name}" />
        <Label
            HorizontalOptions="Center"
            IsVisible="{Binding IsVisiblePlayr3Visible}"
            Text="{Binding Playr3Name}" />
        <Label
            HorizontalOptions="Center"
            IsVisible="{Binding IsVisiblePlayr4Visible}"
            Text="{Binding Playr4Name}" />
        <Label
            HorizontalOptions="Center"
            IsVisible="{Binding IsVisiblePlayr5Visible}"
            Text="{Binding Playr5Name}" />
        <Label
            HorizontalOptions="Center"
            IsVisible="{Binding IsVisiblePlayr6Visible}"
            Text="{Binding Playr6Name}" />
    </VerticalStackLayout>
</ContentPage>